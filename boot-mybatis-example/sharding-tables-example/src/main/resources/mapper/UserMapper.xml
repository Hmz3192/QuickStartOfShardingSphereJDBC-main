<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.shardingtables.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="org.shardingtables.domain.User">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="t_user" property="t_user"/>
        <result column="t_date" property="t_date"/>
        <result column="num" jdbcType="BIGINT" property="num"/>
    </resultMap>
    <sql id="Base_Column_List">
        id
        , t_user, t_date, num
    </sql>
    <select id="showAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_user
    </select>
    <select id="selectUnion" resultType="org.shardingtables.domain.UserDatePojo">
        SELECT i.id, i.t_user, i.t_date, i.num, o.t_date u_date
        FROM (SELECT * FROM t_user WHERE t_date = #{date}) i
                 LEFT JOIN (SELECT * FROM t_date WHERE t_date = #{date}) o ON o.id = i.id;
    </select>

    <insert id="insert" parameterType="org.shardingtables.domain.User">
        insert into t_user (id, t_user, t_date, num)
        values (#{id}, #{t_user}, #{t_date},
                #{num})
    </insert>
    <delete id="deleteUser" parameterType="Long">
        delete
        from t_user
        where id = #{id}
    </delete>
</mapper>